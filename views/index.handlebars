<div class="mainDiv">
    <div class="task">
        {{#each burger_data}}
        {{#unless this.devoured}}
        <div id="burgerInfo">
            {{this.id}}, {{this.burger_name}}
        </div>
        <div>
            <form class="devourForm">
                <input type="hidden" class="burger_id" type="text" value={{this.id}}> <br>
                <button type="submit"> Devour Burger</button>
            </form>
        </div>
        {{/unless}}
        {{/each}}
    </div>
    <div class="task">
        {{#each burger_data}}
        {{#if this.devoured}}
        <input type="text" placeholder="{{this.id}} . {{this.burger_name}}">
        {{/if}}
        {{/each}}
    </div>
</div>

<div class="mainDiv">
    <div>
        <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" id="enter_text">
            <button type="submit">Submit Burger</button>
        </form>

        <h3> Enter the name of your favorite burger and hit 'submit'</h3>
    </div>
</div>